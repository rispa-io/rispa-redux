{
  "name": "@rispa/redux",
  "rispa:name": "react-redux",
  "version": "4.2.2",
  "description": "Rispa Redux plugin",
  "rispa:activator": "./activator/index.js",
  "main": "./lib/index.js",
  "jsnext:main": "./src/index.js",
  "dependencies": {
    "redux-loop": "^4.5.2",
    "@rispa/babel": "4.2.x",
    "@rispa/core": "4.2.x",
    "@rispa/webpack": "4.2.x",
    "@webpack-blocks/webpack": "^2.0.0-alpha",
    "md5": "^2.2.1",
    "history": "^4.9.0-beta.2",
    "react": "^16.7.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-redux": "^5.1.1",
    "connected-react-router": "^5.0.1",
    "redux": "^4.0.1",
    "redux-act": "^1.7.4",
    "redux-logger": "^3.0.6",
    "redux-node-logger": "^0.1.0"
  },
  "devDependencies": {
    "@rispa/eslint-config": ">=3.0.0",
    "jest": "^23.6.0",
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.2",
    "babel-jest": "^23.6.0",
    "babel-core": "7.0.0-bridge.0"
  },
  "scripts": {
    "compile": "rm -rf lib && babel src --out-dir lib --ignore **/*.spec.js,**/*.test.js",
    "lint": "rispa-eslint .",
    "lint:fix": "rispa-eslint . --fix",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "babel": {
    "presets": [
      ["@rispa/babel/preset-app", {
        "env": {
          "targets": {
            "chrome": 56
          }
        }
      }]
    ]
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
