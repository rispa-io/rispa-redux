{
  "name": "@rispa/redux",
  "rispa:name": "react-redux",
  "version": "4.2.2",
  "description": "Rispa Redux plugin",
  "rispa:activator": "./activator/index.js",
  "main": "./lib/index.js",
  "jsnext:main": "./src/index.js",
  "dependencies": {
    "@csssr/redux-loop": "^4.2.5",
    "@rispa/babel": "4.2.x",
    "@rispa/core": "4.2.x",
    "@rispa/webpack": "4.2.x",
    "react": "^15.6.2",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.9",
    "redux": "^3.7.2",
    "redux-act": "^1.7.4",
    "redux-logger": "^3.0.6",
    "redux-node-logger": "^0.1.0",
    "@csssr/redux-loop": "^4.2.5",
    "redux-form": "^7.3.0",
    "md5": "^2.2.1",
    "@webpack-blocks/webpack2": "^0.4.0"
  },
  "devDependencies": {
    "@rispa/eslint-config": ">=3.0.0",
    "jest": "^22.4.3",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-cli": "^6.26.0"
  },
  "scripts": {
    "compile": "babel src --out-dir lib --ignore spec.js,test.js",
    "lint": "rispa-eslint .",
    "lint:fix": "rispa-eslint . --fix",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "<rootDir>../../node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
